<% if order.completed_at? %>
	<%= link_to_with_icon('pdf', t(:invoice_print), spree.admin_order_path(order, :pdf)) %>
<% end %>

<% if order.state.downcase == 'canceled' %>
	<%= link_to_with_icon('pdf', t(:credit_note_print), spree.admin_order_path(order, :pdf, :orderstate => order.state.downcase)) %>
<% end %>

